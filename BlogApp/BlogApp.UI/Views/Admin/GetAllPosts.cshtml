@model List<BlogPostDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}







<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2 class="mb-0">Tüm Blog Yazıları</h2>
    <a href="@Url.Action("CreatePost", "BlogPost")" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Yeni Blog Yazısı Ekle
    </a>
</div>

<table class=table table-dark table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Yazar</th>
            <th>Oluşturulma Tarihi</th>
            <th>Yayın Durumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int index = 1;
            foreach (var post in Model)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</td>
                    <td>@post.AuthorName</td>
                    <td>@post.CreatedAt.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (post.IsPublished)
                        {
                            <span class="badge bg-success">Yayında</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Taslak</span>
                        }
                    </td>
                    <td> <a class="btn btn-warning" asp-area="" asp-controller="Admin" asp-action="UpdatePost" asp-route-id="@post.Id">Güncelle</a> </td>
                    
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">Gösterilecek blog yazısı bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>
