<table class=table table-dark table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Email</th>
            <th>Kullanıcı Adı</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.UserName</td>
                    @if (@item.RoleId == 1)
                    {
                        <td>ADMİN</td>
                    }
                    else{
                    <td>kULLANICI</td>
                    }


                    <td>
                        <a class="btn btn-warning" asp-area="" asp-controller="Admin" asp-action="UserUpdate" asp-route-id="@item.Id">Güncelle</a>
                    </td>


                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">Gösterilecek blog yazısı bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>
